 {
  "train_batch_size" : 4,
  "train_micro_batch_size_per_gpu" : 4,
  "optimizer": {
  "type": "AdamW",
  "params": {
    "lr": 0.00035,
    "betas": [0.95, 0.95],
    "weight_decay": 0.01,
    "eps": 1e-8
  }
},
  "scheduler": {
    "type": "WarmupCosineLR",
    "params": {
        "total_num_steps": 5000,
        "warmup_min_ratio": 0.000035,
        "warmup_num_steps": 500,
        "warmup_type": "linear"
    }
  },
  "bf16": {
    "enabled": true
  },
  "gradient_clipping": 1.0,
  "steps_per_print" : 50,
  "wall_clock_breakdown" : false
 }
